<UserControl x:Class="EasySave.developpement.Views.AddBackupJob"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EasySave.developpement.Views"
             xmlns:components="clr-namespace:EasySave.developpement.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{DynamicResource AddBackup}" FontSize="20" FontWeight="Bold" Margin="10,10,10,10"/>
        <components:BackupJobDetailsForms Margin="0 20 0 0" Grid.Row="1" DataContext="{Binding BackupJobDetailsFormViewModel}"/>

    </Grid>
</UserControl>
