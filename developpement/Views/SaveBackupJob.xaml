<UserControl x:Class="AppWPF.developpement.Views.SaveBackupJob"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppWPF.developpement.Views" xmlns:components="clr-namespace:AppWPF.developpement.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <components:SaveBackupJobStatus DataContext="{Binding SaveBackupJobStatusViewModel}" Grid.Row ="0" Grid.Column="0" Grid.ColumnSpan="2"/>
        <Button Content="{DynamicResource Cancel}" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" Width="100" Margin="10" Command="{Binding CancelCommand}"/>
        <Button Content="{DynamicResource Save}" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Right" Width="100" Margin="10" Command="{Binding SaveCommand}"/>
    </Grid>
</UserControl>
