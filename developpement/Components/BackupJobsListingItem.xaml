<UserControl x:Class="AppWPF.developpement.Components.BackupJobsListingItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppWPF.developpement.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="0" Grid.Row="0" Text="{Binding Name}" />
                <TextBlock Grid.Column="0" Grid.Row="1" Text="{Binding Type}" />
                <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding SourcePath}" />
                <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding DestinationPath}" />
                <Button Command="{Binding EditCommand}" Content="Edit" Grid.Column="2" Grid.Row="0"/>
                <Button Command="{Binding DeleteCommand}" Content="Delete" Grid.Column="2" Grid.Row="1"/>
                <Button Command="{Binding SaveCommand}" Content="Save" Grid.Column="3"/>
        </Grid>
        </Border>
</UserControl>
